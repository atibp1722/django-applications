#:kivy 2.1.0


<WeatherList>:
    ImageLeftWidget:
        source:root.source


<ContentNavigationDrawer>:
    orientation:'vertical'
    padding:'5dp'
    spacing:'5dp'

    AnchorLayout:
        anchor_x:'left'
        size_hint_y:None
        height:avatar.height

        Image:
            id:avatar
            size_hint:None,None
            size:'50dp','50dp'
            source:'data/weather.png'

    MDLabel:
        text:'One stop to get all information that you will ever need!'
        font_style:'Button'
        size_hint_y:None
        height:self.texture_size[1]

    MDLabel:
        text:'weather.app@application.com'
        font_style:'Caption'
        size_hint_y:None
        height:self.texture_size[1]


    ScrollView:

        MDList:
            OneLineListItem:
                text:'Home'
            OneLineListItem:
                text:'About'


<MainWidget>:
    Screen:

        NavigationLayout:
            ScreenManager:
                id:screen_manager
                
                HomePage:

                    name:'home page'
                    BoxLayout:
                        orientation:'vertical'
                        MDToolBar:
                            title:'Weather App'
                            elevation:10
                            left_action_items:[['menu',lambda x:nav_drawer.toggle_nav_drawer()]]

                        ScrollView:
                            MDList:
                                id:home_list
                
                AboutPage:

                    name:'about page'
                    BoxLayout:
                        orientation:'vertical'
                        MDToolBar:
                            title:'Weather App'
                            elevation:10
                            left_action_items:[['menu',lambda x:nav_drawer.toggle_nav_drawer()]]

                        ScrollView:
                           
            
            MDNavigationDrawer:
                id:nav_drawer

                ContentNavigationDrawer:
                    id:content_drawer
                    screen_manager:screen_manager
                    nav_drawer:nav_drawer
